<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:style>
    .name {
      color: #4b4a4a;
      font-size: 17pt;
      font-weight: bold;
      background-color: #d7dde8;
    }

    .description {
      color: #4b4a4a;
      margin: 0 10px 12px 10px;
      background-color: #d7dde8;
    }
    
    .contentTitle {
      background-color: #d7dde8;
      border-bottom: 1px solid #c3c3c3; 
      padding: 0 10px; 
    }   

  </ui:style>

  <g:HeaderPanel>
    <!-- Header. -->
    <g:HTMLPanel styleName='{style.contentTitle}'>
      <span
        class='{style.name}'
        ui:field='nameElem'>Name</span>
      <span
        class='{style.description}'
        ui:field='descElem'>Description</span>
    </g:HTMLPanel>

    <!-- Content. -->
    <g:SimplePanel
      ui:field='cwPanel' />
  </g:HeaderPanel>

</ui:UiBinder> 
